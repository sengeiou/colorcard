<resources>
    <!-- 全局样式 -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- 可点击变色rlyt列表样式 -->
    <style name="clickable_simple_item_rlyt" parent="@style/simple_item_rlyt">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/simple_item_bg</item>
    </style>

    <!-- app全局通栏按钮样式 -->
    <style name="app_onebtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_btnh</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/app_btn_paddingtb</item>
        <item name="android:paddingBottom">@dimen/app_btn_paddingtb</item>
        <item name="android:background">@drawable/bg_main_btn_radius</item>
        <item name="android:textColor">@drawable/btn_text_selected_color</item>
        <item name="android:layout_marginTop">@dimen/app_btn_margintop</item>
        <item name="android:textSize">@dimen/app_textsize</item>
    </style>

    <!-- app全局横向分割线样式 -->
    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/app_line_color</item>
    </style>
    <!-- app全局竖向分割线样式 -->
    <style name="vertical_line">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_line_color</item>
    </style>
    <!-- app全局通栏按钮样式 -->


    <!-- 可点击变色rlyt列表样式 -->

    <!-- 单项rlyt列表样式 -->
    <style name="simple_item_rlyt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/simple_itemh</item>
        <item name="android:paddingLeft">@dimen/simple_item_paddingl</item>
        <item name="android:paddingRight">@dimen/simple_item_paddingr</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 20%黑背景 -->
    <style name="AppDialogActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/black20</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 全局标准对话框 -->
    <style name="appBasicDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
