<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.color.card.ui.widget.crescentoimageview.CrescentoContainer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2ECE63"
        android:elevation="1dp"
        android:scaleType="centerCrop"
        app:curvature="50dp"
        app:curvatureDirection="outward">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="120dp"
                android:paddingRight="120dp">

                <TextView
                    android:id="@+id/tv_qick_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_title_main_border14"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="速检"
                    android:textColor="@drawable/bg_title_main_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_title_main_border14"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="我的"
                    android:textColor="@drawable/bg_title_main_text"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="12dp"
                android:text="今日检测血糖 0 次"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.color.card.ui.widget.HealthPointView
                android:id="@+id/hpv"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/civ_camera"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-50dp"
            android:elevation="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="22dp">

            <TextView
                android:layout_width="18dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_camera" />
        </android.support.v7.widget.CardView>
    </com.color.card.ui.widget.crescentoimageview.CrescentoContainer>

</LinearLayout>
