<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.color.card.ui.widget.crescentoimageview.CrescentoContainer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:scaleType="centerCrop"
            app:curvature="80dp"
            app:curvatureDirection="outward">

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2ECE63"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="今日检测血糖 0 次"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_handle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_handle_shou"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:text="手动录入"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="60dp"
                    android:paddingRight="60dp">

                    <com.color.card.ui.widget.HealthPointView
                        android:id="@+id/hpv"
                        android:layout_width="220dp"
                        android:layout_height="220dp" />
                </LinearLayout>
            </LinearLayout>
        </com.color.card.ui.widget.crescentoimageview.CrescentoContainer>


        <android.support.v7.widget.CardView
            android:id="@+id/civ_camera"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-120dp"
            android:elevation="1dp"
            app:cardCornerRadius="70dp">

            <TextView
                android:id="@+id/tv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="立即检测"
                android:layout_marginTop="-120dp"
                android:textColor="#2ECE63"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>